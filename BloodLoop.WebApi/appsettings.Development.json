{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "BloodLoop.WebApi"
    }
  },
  "ConnectionStrings": {
    "BloodLoop": "Data Source=127.0.0.1,1433;Initial Catalog=BloodLoop;User ID=SA;Password=Password123!;"
  },
  "Authentication": {
    "Issuer": "BloodLoop.WebApi",
    "Audience": "http://localhost:5000/",
    "SecretKey": "",
    "AccessTokenLifetimeMinutes": 5,
    "RefreshTokenLifetimeMinutes": 20
  }
}
